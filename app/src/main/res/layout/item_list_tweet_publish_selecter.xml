<?xml version="1.0" encoding="utf-8"?>
<net.oschina.app.improve.widget.TweetPublishImageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/lay_4">

    <ImageView
        android:id="@+id/iv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:padding="0dp" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_gravity="right|top"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/lay_4"
        android:paddingLeft="@dimen/lay_4"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tweet_delete" />
</net.oschina.app.improve.widget.TweetPublishImageLayout>