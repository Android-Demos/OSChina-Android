<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/lay_12"
        android:layout_marginLeft="@dimen/lay_16"
        android:layout_marginRight="@dimen/lay_16"
        android:layout_marginTop="@dimen/lay_12"
        android:layout_weight="1"
        android:orientation="horizontal">

        <net.oschina.app.widget.AvatarView
            android:id="@+id/iv_tweet_face"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:src="@drawable/widget_dface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lay_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tweet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blog_title_text_color_light"
                android:textSize="16sp"
                tools:text="Large Text" />

            <net.oschina.app.widget.TweetTextView
                android:id="@+id/tweet_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_tweet_name"
                android:layout_below="@id/tv_tweet_name"
                android:layout_marginTop="@dimen/lay_8"
                android:layout_toRightOf="@id/iv_tweet_face"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/space_6"
                android:textColor="?attr/textColor"
                android:textSize="14sp"
                tools:text="最近研究了这个项目，学习rx系列,修复了楼主的bug 主要原因在mainActivity里面资讯fragment的构建" />

            <ImageView
                android:id="@+id/iv_tweet_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tweet_item"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/lay_8"
                android:layout_toRightOf="@id/iv_tweet_face"
                android:clickable="true"
                android:maxHeight="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_bg"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_likeusers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_tweet_image"
                android:layout_marginTop="@dimen/lay_8"
                android:layout_toRightOf="@id/iv_tweet_face"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textColor="?attr/infoTextColor"
                android:textSize="12sp"
                tools:text="Large Text" />

            <RelativeLayout
                android:id="@+id/ll_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_likeusers"
                android:layout_marginTop="@dimen/lay_8"
                android:layout_toRightOf="@id/iv_tweet_face">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tweet_time"
                        style="@style/list_text_info"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/tv_tweet_platform"
                        style="@style/list_text_info" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:text="删除"
                        android:textColor="#ccc"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/iv_like_state"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_thumbup_normal" />

                    <TextView
                        android:id="@+id/tv_tweet_like_count"
                        style="@style/list_text_info"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/lay_8" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="2dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_comment_30" />

                    <TextView
                        android:id="@+id/tv_tweet_comment_count"
                        style="@style/list_text_info"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/h_line"
        android:layout_height="1px"
        android:layout_marginLeft="16dp" />
</RelativeLayout>